REM THIS PROGRAM PRINTS SUM OF DIGITS IN GIVEN INTEGER
REM FOR EXAMPLE IS GIVEN NUMBER IS 1234 THEN SUM OF DIGITS IS 1+2+3+4 = 10

CLS

INPUT "GIVE NUMBER:"; NUM
COUNTER = 0
DO
    A = NUM MOD 10
    X = A + X
    NUM = INT(NUM / 10)
    COUNTER = COUNTER + 1
LOOP UNTIL NUM = 0

PRINT "THE SUM OF DIGITS IS "; X
PRINT "THE NUMBER OF DIGITS IS "; COUNTER
END


