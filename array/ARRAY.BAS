REM DEMO OF ARRAY - ASKING USER TO INPUT MARKS OF STUDENTS

DIM M(100) AS INTEGER
DIM MARKS AS INTEGER
DIM I AS INTEGER
DIM TOTAL AS INTEGER

I=1

DO
	PRINT "ENTER MARKS OF STUDENT";I;"ENTER 0 WHEN DONE"
	INPUT MARKS
	IF MARKS = 0 THEN
		EXIT DO
	END IF
	M(I) = MARKS
	I=I+1

LOOP WHILE (1=1)

TOTAL = 0
FOR J=1 TO J=I-1
	PRINT M(I)
	TOTAL = TOTAL + M(I)
NEXT J

PRINT "AVG MARKS OF STUDENTS"; TOTAL/(I-1)




